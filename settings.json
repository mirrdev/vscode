{
    "editor.fontFamily": "JetBrains Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 13,
    "editor.tabSize": 2,
    "editor.suggest.showStatusBar": true,
    "editor.formatOnSave": true,
    //"editor.quickSuggestions": true,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.wordWrap": "on",
    //"editor.snippetSuggestions": "top",
    "editor.tabCompletion": "on",
    //"editor.suggestSelection": "first",
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.insertMode": "replace",
    "window.enableMenuBarMnemonics": false,
    "window.menuBarVisibility": "toggle",
    "files.exclude": {
        "**/node_modules": true,
        "**/vendor": true
    },
    "files.watcherExclude": {
        "**.lock": true,
        "**.xml": true,
        "**/vendor/**": true,
        "**/node_modules/**": true
    },
    "html.suggest.html5": true,
    "debug.javascript.usePreview": true,
    "stylelint.enable": true,
    //Typescript enable true
    "javascript.validate.enable": true,
    "css.validate": true,
    "scss.validate": false,
    "less.validate": false,
    //"javascript.suggestionActions.enabled": false,
    "liveServer.settings.CustomBrowser": "chrome",
    "liveServer.settings.donotShowInfoMsg": true,
    "emmet.triggerExpansionOnTab": true,
    "emmet.excludeLanguages": [],
    "emmet.includeLanguages": {
        // "javascript": "javascriptreact",
        "vue-html": "html",
        "markdown": "html"
    },
    "tailwindCSS.includeLanguages": {
        "plaintext": "html"
    },
    "tailwindCSS.emmetCompletions": true,
    "tabnine.disable_file_regex": [
        "[.]md$",
        "[.]html$",
        "[.]css$",
    ],
    "tabnine.experimentalAutoImports": true,
    "[html]": {
        "editor.defaultFormatter": "vscode.html-language-features",
    },
    "phpSniffer.standard": "PSR12",
    "intelephense.format.enable": false,
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/bower_components/**",
        "**/vendor/**/{Tests,tests}/**",
        "**/.history/**",
        "**/vendor/**/vendor/**",
        "**/app/**",
        "**/css/**"
    ],
    "[php]": {
        //    "editor.defaultFormatter": "wongjn.php-sniffer",
        //    "editor.formatOnSaveMode": "file"
    },
    "php-docblocker.author": {
        "name": "mirrdev",
        "email": "mirrdev@gmail.com"
    },
    "[javascript]": {
        "editor.formatOnSave": false,
        "editor.defaultFormatter": null,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": true
        }
    },
    "eslint.validate": [
        "javascript"
    ],
    "files.trimTrailingWhitespace": true,
    "liveSassCompile.settings.generateMap": false,
    "liveSassCompile.settings.formats": [
        {
            "format": "expanded",
            "extensionName": ".css",
            "savePath": null
        }
    ],
    "liveSassCompile.settings.autoprefix": [
        "> 1%",
        "last 5 versions"
    ],
    "projectManager.git.baseFolders": [
        "~/git/"
    ],
    "projectManager.any.ignoredFolders": [
        "node_modules",
        "out",
        "typings",
        "test",
        "vendor",
        ".vscode",
        "old",
        ".git"
    ],
    "projectManager.any.baseFolders": [
        "~/pj/"
    ],
    "projectManager.git.ignoredFolders": [
        "node_modules",
        "out",
        "typings",
        "test",
        ".haxelib",
        "vendor",
        ".vscode"
    ],
    "projectManager.hg.ignoredFolders": [
        "node_modules",
        "out",
        "typings",
        "test",
        ".haxelib",
        "vendor",
        ".vscode"
    ],
    "diffEditor.ignoreTrimWhitespace": false,
    "google-translate.firstLanguage": "ru-RU",
    "explorer.confirmDelete": false,
    "jestrunner.jestCommand": "npm run test --",
    "terminal.integrated.shell.linux": "/usr/bin/bash",
    "workbench.iconTheme": "material-icon-theme",
    "workbench.editor.wrapTabs": true,
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "browse-lite.chromeExecutable": "/usr/bin/google-chrome",
    "vite.base": "/src/",
    "debug.terminal.clearBeforeReusing": true,
    "editor.linkedEditing": true,
    "bracket-pair-colorizer-2.colors": [
        "colorizer.color-1",
        "colorizer.color-2",
        "colorizer.color-3"
    ],
    "workbench.colorCustomizations": {
        "[Default Light+]": {
            // Bracket Pair Colorizer overrides.
            "colorizer.color-1": "#ff9900", // Orange-Brown...
            "colorizer.color-2": "#f500f5", // Medium-Pink...
            "colorizer.color-3": "#54b9f8", // Medium-Blue...
        },
        // Fallback to default colors for all themes that lack overrides.
        "colorizer.color-1": "#ffd700", // "Gold". (Yellow with slight Orange)
        "colorizer.color-2": "#da70d6", // "Orchid". (Pink)
        "colorizer.color-3": "#87cefa", // "LightSkyBlue". (Light Blue)
    },
    "workbench.colorTheme": "Default Light+"
}
